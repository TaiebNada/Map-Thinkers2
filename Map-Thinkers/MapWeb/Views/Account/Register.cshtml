@model MapWeb.Models.RegisterViewModel
@using MapDomain.Entities
@{
    ViewBag.Title = "Register";
}
<div class="unit-5 overlay" style="background-image: url('../Content/TemplateFolder/images/hero_bg_1.jpg');">
    <div class="container text-center">
        <h2 class="mb-0">Register</h2>
        <p class="mb-0 unit-6"> @Html.ActionLink("Home", "Index", "Home", routeValues: null, htmlAttributes: null)<span class="sep">></span> <span>Register</span></p>
    </div>
</div>
<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-lg-6 mb-5">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "p-5 bg-white", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    <h2 class="mb-4 text-black">Register</h2>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="row form-group">
                        <div class="col-md-12">
                            @Html.LabelFor(m => m.Email, new { @class = "font-weight-bold" })
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control rounded-0", @type = "email" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-12">
                            @Html.LabelFor(m => m.Password, new { @class = "font-weight-bold" })
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control rounded-0", @type = "password" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-12">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "font-weight-bold" })
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control  rounded-0", @type = "password" })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div id="Enum" class="form-group">
                        @Html.LabelFor(m => m.AccountType, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.Label("Client: ", new { @class = "control-label" }) @Html.RadioButtonFor(m => m.AccountType, UserType.Client, new { @id = "Client", onclick = "Afficher()" })
                            @Html.Label("Candidate: ", new { @class = "control-label" }) @Html.RadioButtonFor(m => m.AccountType, UserType.Candidate, new { @id = "Candidate", onclick = "Afficher2()" })
                            @Html.Label("Resource: ", new { @class = "control-label" }) @Html.RadioButtonFor(m => m.AccountType, UserType.Resource, new { @id = "Resource", onclick = "Afficher3()" })
                        </div>
                    </div>
                    <div class="form-group" id="cl" style="display: none">


                        <div class="col-md-12">
                            @Html.LabelFor(m => m.Name, new { @class = "font-weight-bold" })
                            @Html.PasswordFor(m => m.Name, new { @class = "form-control rounded-0", @type = "Text" })


                            @Html.LabelFor(m => m.Adress, new { @class = "font-weight-bold" })
                            @Html.PasswordFor(m => m.Adress, new { @class = "form-control rounded-0", @type = "Text" })

                        </div>


                    </div>

                    <div class="form-group" id="cd" style="display: none">

                        <div class="col-md-10">
                            @Html.LabelFor(m => m.FirstName, new { @class = "font-weight-bold" })
                            @Html.PasswordFor(m => m.FirstName, new { @class = "form-control rounded-0", @type = "Text" })


                            @Html.LabelFor(m => m.LastName, new { @class = "font-weight-bold" })
                            @Html.PasswordFor(m => m.LastName, new { @class = "form-control rounded-0", @type = "Text" })

                            @Html.LabelFor(m => m.WorkType, new { @class = "font-weight-bold" })
                            @Html.DropDownList("Worktype",
                    new SelectList(Enum.GetValues(typeof(WorkType))),
                    "Worktype",
                    new { @class = "form-control" })


                        </div>
                    </div>
                    <div class="form-group" id="rs" style="display: none">

                        <div class="col-md-10">
                            <span> aalooo3 </span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Register" class="btn btn-primary  py-2 px-4 rounded-0" />
                        </div>
                    </div>
                }
            </div>

        </div>
    </div>
</div>
@section Scripts {
    <script src="~/Content/TemplateFolder/js/show.js"> </script>
    @Scripts.Render("~/bundles/jqueryval")
}