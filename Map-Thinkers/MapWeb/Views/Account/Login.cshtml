@using MapWeb.Models
@model LoginViewModel

@{
    ViewBag.Title = "Log in";
}
<div class="unit-5 overlay" style="background-image: url('../Content/TemplateFolder/images/hero_bg_1.jpg');">
    <div class="container text-center">
        <h2 class="mb-0">Log in</h2>
        <p class="mb-0 unit-6"> @Html.ActionLink("Home", "Index", "Home", routeValues: null , htmlAttributes:null )<span class="sep">></span> <span>Log in</span></p>
    </div>
</div>

<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-lg-6 mb-5">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "p-5 bg-white", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h2 class="mb-4 text-black">Sign in</h2>

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row form-group">
                        <div class="col-md-12">
                            @Html.LabelFor(m => m.Email, new { @class = "font-weight-bold" })
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control rounded-0", @type = "email" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-12">
                            @Html.LabelFor(m => m.Password, new { @class = "font-weight-bold" })
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control rounded-0", @type = "password" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-12">
                            <div class="checkbox">
                                @Html.CheckBoxFor(m => m.RememberMe, new { @class = "font-weight-normal" })
                                @Html.LabelFor(m => m.RememberMe)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Log in" class="btn btn-primary  py-2 px-4 rounded-0" />
                        </div>
                    </div>
                }
            </div>

        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
